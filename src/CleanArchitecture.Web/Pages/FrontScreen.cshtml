@page
@model CleanArchitecture.Web.Pages.FrontScreenModel
@{
    ViewData["Title"] = "Logg inn";
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="apple-touch-icon" sizes="152x152" href="~/apple-touch-icon.png">
    <link rel="icon" type="image/png" sizes="32x32" href="~/favicon-32x32.png">
    <link rel="icon" type="image/png" sizes="16x16" href="~/favicon-16x16.png">
    <link rel="manifest" href="~/manifest.json">
    <link rel="mask-icon" href="~/safari-pinned-tab.svg" color="#5bbad5">
    <meta name="msapplication-TileColor" content="#da532c">
    <meta name="theme-color" content="#2f2f2f">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <script src="https://kit.fontawesome.com/7f0718ff8e.js" crossorigin="anonymous"></script>
    <style>

        .loginRow {
            max-width: 400px;
            margin-top: 5px;
            margin-bottom: 5px;
        }

        .loginContainer {
            width: 450px;
        }
    </style>
</head>
<body class="d-flex flex-column justify-content-center align-items-center pt-5 bg-dark text-warning">

    <img src="android-chrome-144x144.png" class="mb-2" style="width:144px;height:144px" />
    <b class="h3">Bj√∏rkelangen</b>
    <b class="h4">Bygg & Eiendom</b>

    <a asp-area="Identity" asp-page="/Account/Login" class="bg-warning text-dark btn mt-4" style="width:200px"><b>Logg inn</b></a>
    <script>
        if ('serviceWorker' in navigator) {
            navigator.serviceWorker.register('/sw.js')
                .then(function () {
                    console.log('Service Worker Registered');
                });
        }
    </script>
</body>
</html>
