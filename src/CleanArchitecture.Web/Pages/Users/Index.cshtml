@page
@model CleanArchitecture.Web.Pages.Users.IndexModel
@{
    ViewData["Title"] = "Ansatte";
    ViewData["NavTitle"] = "ANSATTE";
    ViewData["NavIcon"] = "fa fa-users";
}

<div class="d-flex flex-column">
    @if (Model.LeaderList.Users.Any())
    {
        <partial name="_UserList" for="LeaderList" />
    }

    @if (Model.ManagerList.Users.Any())
    {
        <partial name="_UserList" for="ManagerList" />
    }

    @if (Model.EmployeeList.Users.Any())
    {
        <partial name="_UserList" for="EmployeeList" />
    }

</div>

@section BottomMenuBar {
    <a asp-page="/Index" class="mobile-bottom-nav__item border-warning">
        <div class="mobile-bottom-nav__item-content text-warning">
            <i class="fa fa-chevron-left" aria-hidden="true"></i>
        </div>
    </a>
    <span class="item-seperator bg-warning"></span>
    @if (User.IsInRole("Leder"))
    {
        <a asp-page="./Create" class="mobile-bottom-nav__item text-success">
            <div class="mobile-bottom-nav__item-content">
                <i class="fa fa-plus"></i>
            </div>
        </a>
    }
}
