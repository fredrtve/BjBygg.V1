<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="apple-touch-icon" sizes="152x152" href="~/apple-touch-icon.png">
    <link rel="icon" type="image/png" sizes="32x32" href="~/favicon-32x32.png">
    <link rel="icon" type="image/png" sizes="16x16" href="~/favicon-16x16.png">
    <link rel="manifest" href="~/manifest.json">
    <link rel="mask-icon" href="~/safari-pinned-tab.svg" color="#5bbad5">
    <meta name="msapplication-TileColor" content="#da532c">
    <meta name="theme-color" content="#2f2f2f">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
  
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.9.0/css/all.min.css" />
    <style>
        .center-block {
            display: block;
            margin-left: auto;
            margin-right: auto;
        }

        .top-left-icon {
            font-size: 2rem;
        }

        .btn-square {
            border-radius: 0px !important
        }

        .custom-file-input ~ .custom-file-label::after {
            content: "Ã…pne";
        }
    </style>
</head>
<body>
    <header>
        <nav class="navbar fixed-top navbar-expand-lg navbar-dark bg-dark" style="z-index:1000">
            <div class="p-2 text-warning" style="font-size:1.25rem"><i class="@ViewData["NavIcon"]"></i>&nbsp;&nbsp;<b>@ViewData["NavTitle"]</b></div>
          <button class="navbar-toggler border-warning" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="fas fa-bars text-warning" style="font-size:1.25rem"></span>
          </button>

          <div class="collapse navbar-collapse" id="navbarSupportedContent">

              <ul class="navbar-nav mr-auto">
                  <li class="nav-item">
                      <a class="nav-link text-warning" asp-area="" asp-page="/Index">Hjem</a>
                  </li>
                  <li class="nav-item">
                      <a class="nav-link text-warning" asp-area="" asp-page="/Missions/Index">Oppdrag</a>
                  </li>
                  @*<li class="nav-item">
            <a class="nav-link text-warning" asp-area="" asp-page="/Index">Timeliste</a>
        </li>*@
                  @if (User.IsInRole("Leder") || User.IsInRole("Mellomleder"))
                  {
                  <li class="nav-item">
                      <a class="nav-link text-warning" asp-area="" asp-page="/Users/Index">Ansatte</a>
                  </li>

                  <li class="nav-item">
                      <a class="nav-link text-warning" asp-area="" asp-page="/Employers/Index">Oppdragsgivere</a>
                  </li>
                  }
              </ul>
     
              <partial name="_LoginPartial" />
          </div>
        </nav>
    </header>

    <main role="main">

        @RenderBody()

        <nav class="mobile-bottom-nav bg-dark">
            @RenderSection("BottomMenuBar", required: false)
        </nav>
    </main>


    <script src="~/lib/jquery/dist/jquery.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.js"></script>

    @RenderSection("Scripts", required: false)
</body>
</html>
